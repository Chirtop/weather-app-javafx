<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.vreme.WeatherController" style="-fx-background-color: #f2f2f2;">

    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
    </padding>

    <Label fx:id="welcomeText" text="Meteo" style="-fx-font-size: 20px; -fx-text-fill: #333333;" />

    <VBox spacing="10.0" alignment="CENTER">
        <HBox spacing="10.0" alignment="CENTER">
            <Button onAction="#onHelloButtonClick" text="Afla vremea" style="-fx-pref-width: 120px; -fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px;" />
            <TextField fx:id="userInput" promptText="Nume oras" style="-fx-pref-width: 200px; -fx-font-size: 14px; -fx-background-color: white; -fx-border-radius: 5px; -fx-border-color: #cccccc; -fx-padding: 5px;" />
        </HBox>
    </VBox>
    <HBox>
    <Label fx:id="cityName" text="-" style="-fx-font-size: 20px; -fx-text-fill: #333333"  />
        <Label fx:id="countryName" text="" style="-fx-font-size: 20px; -fx-text-fill: #333333"  />
    </HBox>

    <HBox spacing ="45.0">
    <VBox spacing="5.0" alignment="BASELINE_LEFT">
        <Label fx:id="label1" text="Temperatura: " style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="label2" text="Temperatura resimtita: " style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="label3" text="Umiditate aer: " style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="label4" text="Intensitatea vantului: " style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="label5" text="Ora locala: " style="-fx-font-size: 20px; -fx-text-fill: #333333" />
    </VBox>
        <VBox spacing="5.0" alignment="BASELINE_LEFT">
        <Label fx:id="temp" text="" style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="feelslike" text="" style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="airHumidity" text="" style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="windIntensity" text="" style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        <Label fx:id="localTime" text="" style="-fx-font-size: 20px; -fx-text-fill: #333333" />
        </VBox>
    </HBox>
</VBox>